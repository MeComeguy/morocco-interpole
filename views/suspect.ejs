<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suspect Profile</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
.top-bar {
            background-color: #333;
            color: #fff;
            padding: 10px;
            position: fixed;
            top: 0;
            left: 30%;
            width: 30%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
        }

        .top-bar-content {
            display: flex;
            align-items: center;
        }

        .top-bar .logo {
            height: 50px;
            margin-right: 20px;
        }

        .top-bar .button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 0 10px;
            cursor: pointer;
        }

        .top-bar .button.home {
            background-color: #dc143c;
        }

        .top-bar .button.informations {
            background-color: #dc143c;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .content {
            margin-top: 80px;
        }

        .suspect-profile {
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        .photo {
            width: 200px;
            height: auto;
            border-radius: 10px;
        }

        .profile-details {
            margin-top: 20px;
        }
    </style>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-content">
            <img src="/logo.png" alt="Public Database Logo" class="logo">
            <button class="button home" onclick="location.href='/wanted';">Home</button>
            <button class="button informations" onclick="window.open('https://www.interpol.int/Contacts/Fugitives-wanted-persons?notice=<%= suspectId %>', '_blank');">I have informations</button>
        </div>
    </div>

    <div class="content">
        <div class="suspect-profile">
            <img src="" alt="Suspect Photo" class="photo">
            <div class="profile-details">
                <h1 class="suspect-name">Loading...</h1>
                <p class="nationality">Loading...</p>
                <p class="date">Loading...</p>
                <p class="charges">Loading...</p>
            </div>
        </div>
    </div>

    <script>
        async function fetchSuspectDetails(id) {
            const encodedId = encodeURIComponent(id);
            try {
                const response = await fetch(`https://ws-public.interpol.int/notices/v1/red/${encodedId}`);
                if (!response.ok) {
                    throw new Error(`Network response was not ok: ${response.statusText}`);
                }
                const data = await response.json();
                displaySuspectDetails(data);
            } catch (error) {
                console.error('Error fetching suspect details:', error);
                const detailsElement = document.querySelector('.profile-details');
                if (detailsElement) {
                    detailsElement.innerHTML = '<p>Error loading suspect details. Please try again later.</p>';
                }
            }
        }

        function displaySuspectDetails(data) {
            const photoElement = document.querySelector('.photo');
            const suspectNameElement = document.querySelector('.suspect-name');
            const nationalityElement = document.querySelector('.nationality');
            const dateElement = document.querySelector('.date');
            const chargesElement = document.querySelector('.charges');

            if (photoElement) {
                if (data._links && data._links.thumbnail && data._links.thumbnail.href) {
                    photoElement.src = data._links.thumbnail.href;
                    photoElement.alt = `${data.forename} ${data.name}`;
                } else {
                    photoElement.src = 'default-image.jpg';
                    photoElement.alt = 'Photo not available';
                }
            }

            if (suspectNameElement) {
                suspectNameElement.textContent = `${data.forename} ${data.name}` || 'Name not available';
            }

            if (nationalityElement) {
                nationalityElement.textContent = `Nationality: ${data.nationalities ? data.nationalities.join(', ') : 'Nationality not available'}`;
            }

            if (dateElement) {
                dateElement.textContent = `Date of Birth: ${data.date_of_birth || 'Unknown'}`;
            }

            if (chargesElement) {
                if (data.arrest_warrants && data.arrest_warrants.length > 0) {
                    const charges = data.arrest_warrants.map(warrant => warrant.charge).join(', ');
                    chargesElement.textContent = `Charges: ${charges}`;
                } else {
                    chargesElement.textContent = 'Charges not specified';
                }
            }
        }

        function getQueryParameter(name) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(name);
        }

        window.addEventListener('load', function () {
            const suspectId = getQueryParameter('id');
            if (suspectId) {
                fetchSuspectDetails(suspectId);
            } else {
                console.error('No suspect ID found in the URL');
                const detailsElement = document.querySelector('.profile-details');
                if (detailsElement) {
                    detailsElement.innerHTML = '<p>No suspect ID provided.</p>';
                }
            }
        });
    </script>
</body>
</html>